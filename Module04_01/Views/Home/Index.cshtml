
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @{
            int m = 10;
            string s = "<h1>Demo</h1>";
            string[] data = { "item1", "item2", "item3" };
        }

        <ul>
            @*<li>不用轉字串:@m</li>
                <li>自動作HTMLEncode: @s</li>
                <li>不作HTMLEncode:@Html.Raw(s)</li>*@
            @*test for*@
            @for (int i = 0; i < data.Length; i++)
            {
                <li>@data[i]</li>
            }
        </ul>
        <ul>
            @{
                for (int i = 0; i < data.Length; i++)
                {
                    <li>@data[i]</li>
                }
            }
        </ul>
        <ul>
            @*test foreach*@
            @foreach (var item in data)
            {
                <li>@item</li>
            }
        </ul>
        
        @*test if*@
        @if (m == 10)
        {
            @:@@result = @s
            <text>
                aserjafhjkrhasjk<br />
            </text>
            //在email中小老鼠可以不用打兩個
            @:john@uuu.com.tw
        }
</body>
</html>
